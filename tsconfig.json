{
  "compilerOptions": {
    "charset": "utf-8",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "esnext",
    "lib": ["es5", "es2015", "es2017", "es2018", "dom"],
    "allowJs": true,
    "jsx": "react",
    "typeRoots": [
      "typings",
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@data/*": ["data/*"],
      "@actions/*": ["src/actions/*"],
      "@components/*": ["src/components/*"],
      "@containers/*": ["src/containers/*"],
      "@reducers/*": ["src/reducers/*"],
      "@states/*": ["src/states/*"],
      "@store/*": ["src/store/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
