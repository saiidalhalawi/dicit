{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "allowJs": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "target": "es6",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "strict": true,
    "removeComments": true,
    "types": ["node", "jest"],
    "paths": {
      "@data/*": ["data/*"],
      "@components/*": ["src/components/*"],
      "@states/*": ["src/states/*"],
      "@libs/*": ["src/libs/*"]
    }
  },
  "typeRoots": ["node_modules/@types"],
  "include": ["src/**/*", "webpack.config.ts"],
  "exclude": ["node_modules"]
}
